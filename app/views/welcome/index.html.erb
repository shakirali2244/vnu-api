<h1>Listing Spaces</h1>
 <%= link_to 'New space', new_space_path %>
 
  <% @spaces.each do |space| %>
  <div class="row">
            <div class="col-md-7">
              <%= link_to image_tag("http://placehold.it/700x300"), space_path(space) %>
                
                
            </div>
            <div class="col-md-5">
                <h3><%= space.title %></h3>
                <h4><%= space.views %> views </h4>
                <p><%= space.text %></p>
                <%= link_to 'Open', space_path(space),{ :class=>"btn btn-primary" } %>
            </div>
        </div>
        <hr>
  <% end %>