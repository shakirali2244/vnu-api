<h1>Listing Spaces</h1>
 <%= link_to 'New space', new_space_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @spaces.each do |space| %>
    <tr>
      <td><%= space.title %></td>
      <td><%= space.text %></td>
      <td><%= link_to 'Show', space_path(space) %></td>
      <td><%= link_to 'Edit', edit_space_path(space) %></td>
      <td><%= link_to 'Destroy', space_path(space),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>